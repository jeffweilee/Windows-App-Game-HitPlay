        <Image Source="Assets/c.png" x:Name="c8" PointerPressed="c_PointerPressed"  Height="105" Margin="159,233,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="84" />
        <Image Source="Assets/a.png" x:Name="a7" PointerPressed="a_PointerPressed"  Height="93" Margin="45,235,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99" />
        <Image Source="Assets/b.png" x:Name="b7" PointerPressed="b_PointerPressed"  Height="105" Margin="34,233,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="105" />
        <Image Source="Assets/c.png" x:Name="c7" PointerPressed="c_PointerPressed"  Height="105" Margin="45,233,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="84" />
        <Image Source="Assets/a.png" x:Name="a4" PointerPressed="a_PointerPressed"  Height="93" Margin="12,335,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99" />
        <Image Source="Assets/b.png" x:Name="b4" PointerPressed="b_PointerPressed"  Height="105" Margin="1,333,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="105" />
        <Image Source="Assets/c.png" x:Name="c4" PointerPressed="c_PointerPressed"  Height="105" Margin="12,333,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="84" />
        <Image Source="Assets/a.png" x:Name="a5" PointerPressed="a_PointerPressed"  Height="93" Margin="139,335,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99" />
        <Image Source="Assets/b.png" x:Name="b5" PointerPressed="b_PointerPressed"  Height="105" Margin="128,333,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="105" />
        <Image Source="Assets/c.png" x:Name="c5" PointerPressed="c_PointerPressed"  Height="105" Margin="139,333,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="84" />
        <Image Source="Assets/a.png" x:Name="a6" PointerPressed="a_PointerPressed"  Height="93" Margin="270,335,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99" />
        <Image Source="Assets/b.png" x:Name="b6" PointerPressed="b_PointerPressed"  Height="105" Margin="259,333,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="105" />
        <Image Source="Assets/c.png" x:Name="c6" PointerPressed="c_PointerPressed"  Height="105" Margin="270,333,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="84" />
        <Image Source="Assets/a.png" x:Name="a1" PointerPressed="a_PointerPressed"  Height="93" Margin="44,440,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99" />
        <Image Source="Assets/b.png" x:Name="b1" PointerPressed="b_PointerPressed"  Height="105" Margin="33,438,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="105" />
        <Image Source="Assets/c.png" x:Name="c1" PointerPressed="c_PointerPressed"  Height="105" Margin="44,438,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="84" />
        <Image Source="Assets/a.png" x:Name="a2" PointerPressed="a_PointerPressed"  Height="93" Margin="169,440,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99" />
        <Image Source="Assets/b.png" x:Name="b2" PointerPressed="b_PointerPressed"  Height="105" Margin="158,438,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="105" />
        <Image Source="Assets/c.png" x:Name="c2" PointerPressed="c_PointerPressed"  Height="105" Margin="169,438,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="84" />
        <Image Source="Assets/a.png" x:Name="a3" PointerPressed="a_PointerPressed"  Height="93" Margin="291,440,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99" />
        <Image Source="Assets/b.png" x:Name="b3" PointerPressed="b_PointerPressed"  Height="105" Margin="280,438,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="105" />
        <Image Source="Assets/c.png" x:Name="c3" PointerPressed="c_PointerPressed"  Height="105" Margin="291,438,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="84" />


    </Grid>
</Page>
