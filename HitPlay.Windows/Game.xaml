        	<Run Text="HIT Dong Dong"/>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="966,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="58" Width="165" FontSize="36" Text="Time：" Foreground="#FFD9D9E4" FontWeight="Bold"/>
